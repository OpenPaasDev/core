dc_name: hetzner
base_dir: config
org_name: chaordic

server_groups:
  server:
    num: 3
    lb_target: false
    instance_type: cx21
 #   volumes: 
 #   - name: "data_vol"
 #     path: /opt/nomad_server_data
 #     size: 20
 #     owner: www-data
  agent:
    num: 2
    lb_target: true # should probably be is_lb_target instead, more natural
    instance_type: cx21

providers:
  - name: k3s
    config:
      cluster_name: k8s
      server_group: server
      agent_groups: 
      - agent
      internal_network_interface_name: ens10 
  - name: ansible
    config:
      groups:
      - name: bootstrap
        lifecycle: bootstrap 
        folder: bootstrap_playbooks
      - name: sync
        lifecycle: always 
        folder: playbooks

cloud_provider_config:
  sudo_user: devops
  ssh_key_github_ids: # retrieves public ssh keys under https://github.com/wfaler.keys
      - wfaler
  private_ssh_key: /home/wfaler/.ssh/id_rsa
  provider: hetzner
  allowed_ips:
    - 178.194.90.93/32
    - 10.42.0.0/16
    - 10.43.0.0/16
  provider_settings:
    location: fsn1
    ssh_keys: # use Hetzner hcloud CLI tool to retrieve fingerprints: "hcloud ssh-key list"
    - 70:67:b9:e2:d2:e6:6f:51:82:e4:6d:cc:c6:ff:26:8a
    load_balancer_type: lb11
    ssl_certificate_ids:
    - 1232582 # use Hetzner hcloud CLI tool to retrieve numeric ID: "hcloud certificate list"
    resource_names:
      base_server_name: prod
      firewall_name: prod_firewall
      network_name: prod_network
